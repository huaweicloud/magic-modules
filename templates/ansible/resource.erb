    while True:
        url = link.format(**p)
        r = send_<%= list_api.out_name %>_request(module, client, url)
        if not r:
            break

        for item in r:
            item = fill_<%= list_api.out_name%>_resp_body(item)
            if not are_different_dicts(identity_obj, item):
                result.append(item)

        if len(result) > 1:
            break

        p['offset'] += 1
<% elsif pp.eql?('start') -%>
    p = {'start': 0}
    while True:
        url = link.format(**p)
        r = send_<%= list_api.out_name %>_request(module, client, url)
        if not r:
            break

        for item in r:
            item = fill_<%= list_api.out_name%>_resp_body(item)
            if not are_different_dicts(identity_obj, item):
                result.append(item)

        if len(result) > 1:
            break

        p['start'] += len(r)
<% else -%>
    r = send_<%= list_api.out_name %>_request(module, client, link)
    if not r:

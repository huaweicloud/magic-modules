<%    if list_op.msg_prefix -%>
    r = r.get(<%= quote_string(list_op.msg_prefix) %>, [])
<%    end  # object.msg_prefix -%>
<%    unless check_code1.empty? -%>
<%= indent(check_code1, 4) %>
<%    end -%>
